# Basic Clearance login form
<div class="w-full max-w-lg bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 ml-auto mr-auto">
  <% flash.each do |key, value| %>
    <div class="bg-orange-400 text-sm text-white px-2 py-2 mb-6 shadow-md rounded">
      <div class="flash <%= key %>"><%= value %></div>
    </div>
  <% end %>

  <%= form_for :session, url: session_path, html: {class: "md:pr-4"} do |form| %>
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/4"></div>
      <p class="md:w-3/4 block text-sm text-gray-500 font-bold">
        <%= link_to "Log in to Predictable", root_path %>
      </p>
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/4">
        <%= form.label :email, class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      </div>
      <div class="md:w-3/4">
        <%= form.text_field :email, type: 'email', placeholder: "elvis@originalfuzz.com", class: 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500' %>
      </div>
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/4">
        <%= form.label :password, class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      </div>
      <div class="md:w-3/4">
        <%= form.password_field :password, placeholder: "******************", class: 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-username' %>
      </div>
    </div>

    <div class="md:flex md:items-center">
      <div class="md:w-1/4"></div>
      <div class="md:w-3/4">
        <%= form.submit "Log in", class: "shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>

    <div class="md:flex md:items-center mt-6">
      <div class="md:w-1/4"></div>
      <p class="md:w-3/4 block text-sm text-gray-500 font-bold">
        <% if Clearance.configuration.allow_sign_up? %>
          <%= link_to t(".sign_up"), sign_up_path %>&nbsp;&bull;
        <% end %>
          <%= link_to t(".forgot_password"), new_password_path %>
      </p>
    </div>
  <% end %>
</div>
